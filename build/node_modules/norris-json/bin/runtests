#!/usr/bin/env node

var step 	= require('step');

step(
	//-------------------------------------------------------------------------
	// Run the comment parsing test
	//-------------------------------------------------------------------------
	function test1() {
		console.log('> Commented JSON loading test...');
		require(__dirname + '/../test/comments.test').make().run({}, this);
	},

	//-------------------------------------------------------------------------
	// Run the attach to global test
	//-------------------------------------------------------------------------
	function test2() {
		console.log('> Attach to global test...');
		require(__dirname + '/../test/attach-to-global.test').make().run({}, this);
	},

	//-------------------------------------------------------------------------
	// Run the value() test
	//-------------------------------------------------------------------------
	function test3() {
		console.log('> Getting nested values test...');
		require(__dirname + '/../test/value.test').make().run({}, this);
	}
);